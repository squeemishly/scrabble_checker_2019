<div class="search-prompt">Search for a word:</div>
<div class="search-form">
  <%= form_tag('/search?word=', method: :get) do %>
  <%= text_field_tag :search %>
  <%= submit_tag 'Submit' %>
  <% end %>
</div>

<% if @words %>
  <ul>
  <% @words.each do |word| %>
    <li><%= word %></li>
  <% end %>
  </ul>
<% end %>
